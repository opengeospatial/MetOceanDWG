<?xml version="1.0" encoding="UTF-8"?>
<TemporalCRS xmlns="http://www.opengis.net/gml/3.2"
             xmlns:xlink="http://www.w3.org/1999/xlink"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:gml="http://www.opengis.net/gml/3.2"
             xmlns:gmd="http://www.isotc211.org/2005/gmd"
             xmlns:gco="http://www.isotc211.org/2005/gco"
             xmlns:rim="urn:oasis:names:tc:ebxml-regrep:xsd:rim:3.0"
             xmlns:epsg="urn:x-ogp:spec:schema-xsd:EPSG:1.0:dataset"
             xsi:schemaLocation = "http://www.opengis.net/gml/3.2 http://schemas.opengis.net/gml/3.2.1/datums.xsd"
             gml:id="unix-time-crs">
  <description>Concrete temporal CRS of seconds elapsed from 1-Jan-1970 (00h00 UTC).</description>
  <identifier codeSpace="http://www.ietf.org/rfc/rfc3986">http://www.opengis.net/def/crs/OGC/0.2/UnixTime</identifier>
  <name>Unix Time</name>
  <name>POSIX Time</name>
  <remarks>Version 0.2</remarks>
  <scope>For continuous count of seconds in software applications.</scope>
  <timeCS>
    <TimeCS gml:id="seconds-cs">
      <description>1D coordinate system containing a time axis measuring seconds [s].</description>
      <identifier codeSpace="http://www.ietf.org/rfc/rfc3986">http://www.opengis.net/def/cs/OGC/0.2/Seconds</identifier>
      <remarks>Version 0.2</remarks>
      <axis>
        <CoordinateSystemAxis gml:id="seconds-axis" uom="http://www.opengis.net/def/uom/UCUM/0/s">
          <description>Coordinate system axis for the recording of seconds [s].</description>
          <identifier codeSpace="http://www.ietf.org/rfc/rfc3986">http://www.opengis.net/def/axis/OGC/0.2/seconds</identifier>
          <remarks>Version 0.2</remarks>
          <axisAbbrev>unix</axisAbbrev>
          <axisDirection codeSpace="http://www.ietf.org/rfc/rfc3986">http://www.opengis.net/def/axisDirection/OGC/1.0/future</axisDirection>
        </CoordinateSystemAxis>
      </axis>
    </TimeCS>
  </timeCS>
  <temporalDatum>
    <TemporalDatum gml:id="unix-epoch">
      <description>
        Origin of Unix time (1-Jan-1970, 00h00 UTC).
      </description>
      <identifier codeSpace="http://www.ietf.org/rfc/rfc3986">http://www.opengis.net/def/datum/OGC/0.2/UnixTimeDatum</identifier>
      <remarks>Version 0.2</remarks>
      <scope>For continuous count of seconds in software applications.</scope>
      <origin>1970-01-01T00:00:00Z</origin>
    </TemporalDatum>
  </temporalDatum>
</TemporalCRS>
